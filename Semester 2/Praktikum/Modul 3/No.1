class stack {

    private int maxSize;
    private Character[] stackArray;
    private int top;

    public stack(int size) {
        maxSize = size;
        stackArray = new Character[maxSize];
        top = -1;
    }

    public void push(Character item) { // menambah kan data
        stackArray[++top] = item;
    }

    public Character pop() { // mengeluarkan data terakhir/mengambil data paling atas
        return stackArray[top--];
    }

    public Character peek() {
        return stackArray[top];
    }

    public boolean isEmpty() {
        return (top == -1);
    }

    public boolean isFull() {
        return (top == maxSize - 1);
    }
}

class Pembalik {

    public String pembalikkata(int size, String kata) {
        stack st = new stack(size);

        //menambhakan kata dalam stack
        for (int i = 0; i < kata.length(); i++) {
            st.push(kata.charAt(i));
        }

        //megeluarkan kata dari stack
        String out = " ";
        while (!st.isEmpty()) {//ketika tumpukan dalam keadaan kosong
            out += st.pop();
        }
        return out;
    }
}

