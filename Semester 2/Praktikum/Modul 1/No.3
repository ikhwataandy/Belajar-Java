class mahasiswa {

    private long nim;
    private String nama;
    private String asal;

    public mahasiswa(long nim, String nama, String asal) {
        this.nim = nim;
        this.nama = nama;
        this.asal = asal;
    }

    public void displayMhs() {
        System.out.print("\tNIM: " + nim);
        System.out.print(", Nama: " + nama);
        System.out.println(", Asal: " + asal);
    }

    public long getNim2() {
        return nim;
    }
}

    class DataArray2 {

        private mahasiswa[] mhs;
        private int nElemen;

        public DataArray2(int max) {
            mhs = new mahasiswa[max];
            nElemen = 0;
        }

        public mahasiswa find2(long searchNim) {
            int i;
            for (i = 0; i < nElemen; i++) {
                if (mhs[i].getNim2() == searchNim) {
                    break;
                }
            }
            if (i == nElemen) {
                return null;
            } else {
                return mhs[i];
            }
        }

        public void insert2(long nim, String nama, String asal) {
            mhs[nElemen] = new mahasiswa(nim, nama, asal);
            nElemen++;
        }

        public boolean delete2(long searchNim) {
            int i;
            for (i = 0; i < nElemen; i++) {
                if (mhs[i].getNim2() == searchNim) {
                    break;
                }
            }
            if (i == nElemen) {
                return false;
            } else {
                for (int j = 0; j < nElemen; j++) {
                    mhs[j] = mhs[j + 1];
                }
                nElemen--;
                return true;
            }
        }

        public void displayArray() {
            for (int i = 0; i < nElemen; i++) {
                mhs[i].displayMhs();
            }
        }
}


