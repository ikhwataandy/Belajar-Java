        HighArray arr;
        arr = new HighArray(maxSize);

        arr.insert(15);
        arr.insert(30);
        arr.insert(45);
        arr.insert(53);
        arr.insert(77);
        arr.insert(79);
        arr.insert(81);

        arr.display();
        
        System.out.println("Array sesudah ditambahkan");
        int key = 20;
        arr.sort(key);
        arr.display();
    }
}
